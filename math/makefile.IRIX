#!/bin/make

INCDIRS =   -I../corelib
TYPE = -n32 -mips3
FLAGS = $(TYPE) -g -xansi -DSGI -DPF_CPLUSPLUS_API=1 -woff 1681 $(INCDIRS)

LIBOBJS = vsVector.o vsQuat.o vsMatrix.o
LIBSRCS = vsVector.c++ vsQuat.c++ vsMatrix.c++

LIBNAME = libvsMath.a

all: $(LIBNAME)

$(LIBNAME): $(LIBOBJS)
	ar -rc $(LIBNAME) $(LIBOBJS)

dep: depend
depend:
	makedepend -f makefile.IRIX -- $(FLAGS) -- $(LIBSRCS)

clean:
	rm -f *.o core $(LIBNAME) makefile.*.bak


.c++.o:
	CC $(FLAGS) -c $< -o ./$*.o

.c.o:
	CC $(FLAGS) -c $< -o ./$*.o


#----------------------------------------------------------------------
# DO NOT DELETE

vsVector.o: /usr/include/stdio.h /usr/include/standards.h
vsVector.o: /usr/include/sgidefs.h /usr/include/math.h vsVector.h++
vsVector.o: ../corelib/vsGlobals.h++
vsQuat.o: vsQuat.h++ vsMatrix.h++ ../corelib/vsGlobals.h++ vsVector.h++
vsQuat.o: /usr/include/math.h /usr/include/sgidefs.h /usr/include/standards.h
vsQuat.o: /usr/include/stdio.h
vsMatrix.o: /usr/include/math.h /usr/include/sgidefs.h
vsMatrix.o: /usr/include/standards.h /usr/include/stdio.h
vsMatrix.o: ../corelib/vsGlobals.h++ vsMatrix.h++ vsVector.h++ vsQuat.h++
